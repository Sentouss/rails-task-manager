<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    <h2>Tasks List</h2>
    <% if @tasks.empty? %>
      <p>No tasks available.</p>
    <% else %>
      <div class="list-group">
        <% @tasks.each do |task| %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <span>
              <% if task.completed %>
                <i class="fas fa-check-circle text-success"></i>
              <% else %>
                <i class="fas fa-times-circle text-danger"></i>
              <% end %>
              <%= link_to task.title, task_path(task), class: "ms-2" %>
            </span>
            <%= link_to task_path(task), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i> Delete
            <% end %>
          </div>
        <% end %>
      </div>
        <%= link_to new_task_path, class: "btn btn-primary mt-3" do %>
    <i class="fas fa-plus-circle"></i> Create a new task
  <% end %>
  </div>
  </div>
<% end %>
</div>
