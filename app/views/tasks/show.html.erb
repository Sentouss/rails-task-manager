<div class="container mt-3">
  <div class="card">
    <div class="card-header">
      <h2><%= @task.title %></h2>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @task.details %></p>
      <p class="card-text">
        Completed:
        <% if @task.completed %>
          <span class="badge bg-success">Yes</span>
        <% else %>
          <span class="badge bg-danger">No</span>
        <% end %>
      </p>
      <div class="d-flex justify-content-start">
        <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary me-2" %>
        <%= link_to 'Back to all tasks', tasks_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
